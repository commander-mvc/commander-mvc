{
  "name": "commander-mvc",
  "version": "0.0.0-development",
  "description": "A model-view-controller wrapper for commander CLI framework",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "npm run lint && jest --coverage",
    "lint": "tslint -c tslint.json -p tsconfig.json | snazzy",
    "commit": "git-cz",
    "semantic-release": "npm run build && semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Towerism/commander-mvc.git"
  },
  "keywords": [
    "commander",
    "mvc",
    "cli",
    "command-line"
  ],
  "author": "Martin Fracker",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/towerism/commander-mvc/issues"
  },
  "homepage": "https://github.com/towerism/commander-mvc#readme",
  "dependencies": {
    "awilix": "^3.0.9",
    "chalk": "^2.4.1",
    "commander": "^2.18.0",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.9.4",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.5.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.9.14",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "travis-deploy-once": "^5.0.7",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/src/$1",
      "@e2e/(.*)": "<rootDir>/e2e/$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "ts-jest": {
    "tsConfiFile": "tsconfig.test.json"
  }
}
